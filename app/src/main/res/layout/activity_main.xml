<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="#000000">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:text=""
                android:textColor="#ffffff"
                android:textSize="40sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|right"
                android:layout_marginTop="65dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="0dp"
                android:id="@+id/signView"/>

    </LinearLayout>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <TextView
            android:text="0"
            android:textColor="#ffffff"
            android:textSize="60dp"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:gravity="center|right"
            android:layout_marginTop="50dp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/numberView"/>


    </LinearLayout>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|bottom">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:text="÷"
                    android:textSize="28sp"
                    android:layout_weight="1"
                    android:textColor="#ffffff"
                    android:background="@drawable/button_color2"
                    android:onClick="onCalc"
                    android:id="@+id/buttonDiv" />
            <Button
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:text="7"
                    android:textSize="28sp"
                    android:layout_weight="1"
                    android:textColor="#ffffff"
                    android:background="@drawable/button_color"
                    android:onClick="onNum"
                    android:id="@+id/button7"/>

            <Button
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:text="8"
                    android:textSize="28sp"
                    android:layout_weight="1"
                    android:textColor="#ffffff"
                    android:background="@drawable/button_color"
                    android:onClick="onNum"
                    android:id="@+id/button8"/>

            <Button
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:text="9"
                    android:textSize="28sp"
                    android:layout_weight="1"
                    android:textColor="#ffffff"
                    android:background="@drawable/button_color"
                    android:onClick="onNum"
                    android:id="@+id/button9"/>

            <Button
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:text="C"
                    android:textSize="28sp"
                    android:layout_weight="1"
                    android:textColor="#ffffff"
                    android:background="@drawable/button_color2"
                    android:onClick="onC"
                    android:id="@+id/buttonC"/>


        </LinearLayout>


        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:text="×"
                    android:textSize="28sp"
                    android:layout_weight="1"
                    android:textColor="#ffffff"
                    android:background="@drawable/button_color2"
                    android:onClick="onCalc"
                    android:id="@+id/buttonMul" />
            <Button
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:text="4"
                    android:textSize="28sp"
                    android:layout_weight="1"
                    android:textColor="#ffffff"
                    android:background="@drawable/button_color"
                    android:onClick="onNum"
                    android:id="@+id/button4"/>

            <Button
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:text="5"
                    android:textSize="28sp"
                    android:layout_weight="1"
                    android:textColor="#ffffff"
                    android:background="@drawable/button_color"
                    android:onClick="onNum"
                    android:id="@+id/button5"/>

            <Button
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:text="6"
                    android:textSize="28sp"
                    android:layout_weight="1"
                    android:textColor="#ffffff"
                    android:background="@drawable/button_color"
                    android:onClick="onNum"
                    android:id="@+id/button6"/>

            <Button
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:textSize="28sp"
                    android:layout_weight="1"
                    android:textColor="#ffffff"
                    android:background="#0870DF"
                    android:onClick="onEqual"
                    android:id="@+id/buttonEqualTop"/>

        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:text="−"
                    android:textSize="28sp"
                    android:layout_weight="1"
                    android:textColor="#ffffff"
                    android:background="@drawable/button_color2"
                    android:onClick="onCalc"
                    android:id="@+id/buttonMinus"/>
            <Button
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:text="1"
                    android:textSize="28sp"
                    android:layout_weight="1"
                    android:textColor="#ffffff"
                    android:background="@drawable/button_color"
                    android:onClick="onNum"
                    android:id="@+id/button1" />
            <Button
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:text="2"
                    android:textSize="28sp"
                    android:layout_weight="1"
                    android:textColor="#ffffff"
                    android:background="@drawable/button_color"
                    android:onClick="onNum"
                    android:id="@+id/button2" />
            <Button
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:text="3"
                    android:textSize="28sp"
                    android:layout_weight="1"
                    android:textColor="#ffffff"
                    android:background="@drawable/button_color"
                    android:onClick="onNum"
                    android:id="@+id/button3" />
            <Button
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:text="="
                    android:textSize="28sp"
                    android:layout_weight="1"
                    android:textColor="#ffffff"
                    android:background="#0870DF"
                    android:onClick="onEqual"
                    android:id="@+id/buttonEqual"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <Button
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:text="+"
                    android:textSize="28sp"
                    android:layout_weight="1"
                    android:textColor="#ffffff"
                    android:background="@drawable/button_color2"
                    android:onClick="onCalc"
                    android:id="@+id/buttonPlus" />

            <Button
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:text="±"
                    android:textSize="28sp"
                    android:layout_weight="1"
                    android:textColor="#ffffff"
                    android:background="@drawable/button_color"
                    android:onClick="onSign"
                    android:id="@+id/buttonSign" />

            <Button
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:text="0"
                    android:textSize="28sp"
                    android:layout_weight="1"
                    android:textColor="#ffffff"
                    android:background="@drawable/button_color"
                    android:onClick="onNum"
                    android:id="@+id/button0" />

            <Button
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:text="."
                    android:textSize="28sp"
                    android:layout_weight="1"
                    android:textColor="#ffffff"
                    android:background="@drawable/button_color"
                    android:onClick="onDot"
                    android:id="@+id/buttonDot" />

            <Button
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:textSize="28sp"
                    android:layout_weight="1"
                    android:textColor="#ffffff"
                    android:background="#0870DF"
                    android:onClick="onEqual"
                    android:id="@+id/buttonEqualBottom" />

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>